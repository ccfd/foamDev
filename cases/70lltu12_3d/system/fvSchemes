FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss cubic;
}

divSchemes
{
    div(phi,U)                      Gauss cubic;
    div(phi,omega)                  Gauss cubic;
    div(phi,k)                      Gauss cubic;
    div((nuEff*dev2(T(grad(U)))))   Gauss cubic; 
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave;
    correctWalls true;
}


