FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "pcorr.*"
    {
        solver           GAMG;
        tolerance        0.02;
        relTol           0;
        smoother         GaussSeidel;
    }

    p
    {
        $pcorr;
        tolerance        1e-7;
        relTol           0.01;
    }

    pFinal
    {
        $p;
        tolerance        1e-7;
        relTol           0;
    }

    U
    {
        type coupled;
        solver PBiCICG;
        preconditioner DILU;
        tolerance (1e-07 1e-07 1e-07);
        relTol (0.01 0.01 0.01);
        minIter 3;
    }

    UFinal
    {
        $U;
        tolerance       (1e-10 1e-10 1e-10);
        relTol          (0 0 0);
    }

    "(k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }

    "(k|omega)Final"
    {
        $k;
        tolerance       1e-06;
        relTol          0;
    }

}

PIMPLE
{
    consistent yes;
    turbOnFinalIterOnly no;
    nOuterCorrectors    50;
    nCorrectors         1;
    nNonOrthogonalCorrectors 1;
    
    outerCorrectorResidualControl//for openfoam-plus make it -> residualControl
    {
      U
      {
        tolerance  1e-5;
        relTol      0;
      }
      "(pFinal|p|k|omega)"
      {
        tolerance  1e-5;
        relTol      0;
      }
    }
}

relaxationFactors
{
    fields
    {
        p               0.5;
    }
    equations
    {
        U   0.7;
        "(k|omega)"   0.5;
        "(U|k|omega)Final" 1.0;

    }
}

cache
{
    grad(U);
}

